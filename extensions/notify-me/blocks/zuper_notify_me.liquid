 <style>
  /*

   ------------------------------
   Notify Button (right side tab)
   ------------------------------
*/
  .notify {
    position: fixed;
    top: 60%;
    right: 0;
    padding: 8px 14px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    transform: rotate(-90deg);
    transform-origin: right bottom;
    border-radius: 10px 10px 0 0;
    box-shadow: 0 4px 14px rgba(0, 0, 0, 0.15);
    cursor: pointer;
    z-index: 6000;
    gap: 0.4rem;
    align-items: center;
    justify-content: center;
    transition:
      transform 0.25s ease,
      box-shadow 0.25s ease;
    display: none;
  }

  .notify:hover {
    transform: rotate(-90deg) translateX(-6px);
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.2);
  }

  .notify span {
    color: white;
    font-weight: 700;
    letter-spacing: 0.3px;
    white-space: nowrap;
  }

  /*

   ------------------------------
   Modal container
   ------------------------------
*/
  .modal-container {
    position: fixed;
    inset: 0;
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 9999999;
  }

  .modal-container.is-open {
    display: flex;
  }

  .notify-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(3px);
    z-index: 1;
    animation: fadeIn 0.25s ease-out forwards;
  }

  /*

   ------------------------------
   Modal card
   ------------------------------
*/
  .modal {
    position: absolute;
    z-index: 2;
    width: min(90vw, 480px);
    padding: 1.75rem;
    background: #fff;
    border-radius: 14px;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
    animation: slideUp 220ms ease;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    animation: popupIn 0.25s ease-out forwards;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(14px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Title & text */
  .modal h3 {
    margin: 0 0 0.25rem;
    font-size: 1.28rem;
  }

  .modal p {
    margin: 0;
    color: #555;
    font-size: 0.95rem;
  }

  /* Form elements */
  #notifyForm {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .modal input[type='text'] {
    width: 100%;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    border: 1.5px solid #e6e6e6;
    font-size: 0.95rem;
  }

  .modal input[type='text']:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 6px rgba(102, 126, 234, 0.1);
  }

  /* Buttons */
  .btn {
    padding: 0.75rem 1.2rem;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 700;
    cursor: pointer;
  }

  .btn-close {
    background: #f3f3f3;
    border: none;
    width: 38px;
    height: 38px;
    border-radius: 8px;
    font-size: 1.1rem;
    cursor: pointer;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fadeOut {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }

  /* Popup In */
  .popup-in {
    animation: popupIn 0.35s cubic-bezier(0.2, 1, 0.3, 1) forwards;
  }

  /* Popup Out */
  .popup-out {
    animation: popupOut 0.25s cubic-bezier(0.2, 1, 0.3, 1) forwards;
  }

  @keyframes popupIn {
    0% {
      scale: 0.5;
    }
    100% {
      scale: 1;
    }
  }

  @keyframes popupOut {
    0% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
    100% {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
  }

  /* Responsive */
  @media (max-width: 600px) {
    .modal {
      width: 94vw;
      padding: 1rem;
    }
    .notify {
      top: 70%;
    }
  }
</style>

