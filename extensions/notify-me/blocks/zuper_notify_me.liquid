<div
  id="zuper-notify-button"
  class="notify btn-open"
  role="button"
  aria-haspopup="dialog"
  aria-controls="notifyModal"
  tabindex="0"
>
  <span>Notify Me!</span>
</div>

<div
  class="modal-container"
  id="notifyModal"
  aria-hidden="true"
  role="dialog"
>
  <div class="notify-overlay"></div>

  <section
    class="modal"
    role="document"
    aria-labelledby="notifyTitle"
  >
    <div style="display:flex;justify-content:space-between;align-items:center;">
      <div>
        <h3 id="notifyTitle">Stay in touch</h3>
        <p>Enter your email or phone to get notified when this product is back in stock.</p>
      </div>
      <button class="btn-close" aria-label="Close">âœ•</button>
    </div>

    <form
      id="notifyForm"
      novalidate
      onerror=""
    >
      <!-- Error message container -->
      <div id="error-message" style="color: red; font-size: 0.9rem;"></div>
      <input
        id="contactInput"
        type="text"
        name="email"
        placeholder="you@example.com"
        autocomplete="email"
        value="{{ customer.email }}"
        required
      >

      <div>
        {% render 'mobile_number' %}
      </div>
      <div style="text-align:right;">
        <button class="btn" type="submit">Notify Me</button>
      </div>
    </form>
  </section>
</div>

